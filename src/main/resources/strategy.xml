<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="birthdayStrategy" class="ua.epam.spring.hometask.strategy.BirthdayStrategy" primary="true">
        <property name="discount" value="5"/>
        <property name="airDays" value="5"/>
    </bean>

    <bean id="TicketNumberStrategy" class="ua.epam.spring.hometask.strategy.TicketNumberStrategy" >
        <property name="discount" value="50"/>
    </bean>

</beans>